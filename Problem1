class Solution {
    public int[] dailyTemperatures(int[] temperatures) {
        if(temperatures == null || temperatures.length == 0){
            return new int[]{0};
        }
        int[] result = new int[temperatures.length];
        //Using stack, add indexes to stack till we find greater temp
        Stack<Integer> st = new Stack<>();
        for(int i = 0; i< temperatures.length; i++){
            while(!st.empty() && temperatures[st.peek()] < temperatures[i]){
                int j = st.pop();
                //if we find a temp greater than top of stack, take difference
                result[j] = i - j;
            }
            st.add(i);
        }
        //if there are no temp greater, make them as 0
        while(!st.isEmpty()){
            int j = st.pop();
            result[j] = 0; 
        }
        return result;
    }
}
